name: tagger
on:
  push:
    branches:
      - main
    tags-ignore:
      - "*"
jobs:
  tagger:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Bump version and push tag
        id: tag-version
        uses: mathieudutour/github-tag-action@v6.0
        with:
          github_token: ${{ secrets.GH_PAT }}
          default_bump: false
